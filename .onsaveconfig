# run license header manager on .h files, whenever they're saved.
[*.h]
command = C:\Development\Projects\VS2022\LicenseHeaderManager\LicenseHeaderManager.Console\bin\Debug\LicenseHeaderManager.Console.exe
arguments = -f {file} -l C:\Development\Projects\RP2040\Arduino\YardControl\YardControl.sln.licenseheader -c C:\Development\Projects\RP2040\Arduino\YardControl\scripts\licenseheader.json

