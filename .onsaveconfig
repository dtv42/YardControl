# run header script on .h files, whenever they're saved.
[*.h]
command = PowerShell 
arguments = -file {solution_directory}\scripts\headers.ps1 -filename {file}
always_run = true

[*.hpp]
command = PowerShell 
arguments = -file {solution_directory}\scripts\headers.ps1 -filename {file}
always_run = true

[*.cpp]
command = PowerShell 
arguments = -file {solution_directory}\scripts\headers.ps1 -filename {file}
always_run = true

[*.ino]
command = PowerShell 
arguments = -file {solution_directory}\scripts\headers.ps1 -filename {file}
always_run = true
